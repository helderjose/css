background-attachment
  scroll|fixed|local|initial|inherit;

background-blend-mode
  normal|multiply|screen|overlay|darken|lighten|color-dodge|saturation|color|luminosity;

background-color
  color|transparent|initial|inherit;  (hexadecimal, rgb, rgba, hsl, hsla)

background-image
  url|none|initial|inherit;
  linear-gradient(), radial-gradient(), repeating-linear-gradient(), repeating-radial-gradient()

background-origin
  padding-box|border-box|content-box|initial|inherit;

background-position:
  left top
  left center
  left bottom
  right top
  right center
  right bottom
  center top
  center center
  center bottom
  x% y%
  xpos ypos
  initial
  inherit

background-repeat
  repeat|repeat-x|repeat-y|no-repeat|space|round|initial|inherit;

background-size
  auto|length|percentage|cover|contain|initial|inherit;




shorthand order:
  background: #ffffff url("img_tree.png") no-repeat right top;
  background-color
  background-image
  background-repeat
